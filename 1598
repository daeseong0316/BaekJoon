#include <iostream>
#include <string>
#include <cmath>
using namespace std;

int main() {
    ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);

	int x, y, xw, yw, xh, yh;
	cin >> x >> y;

	xw = (x - 1) / 4;
	yw = (y - 1) / 4;

	xh = (x - 1) % 4;
	yh = (y - 1) % 4;

	cout << abs(xw - yw) + abs(xh - yh);

    return 0;
}
