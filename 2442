import java.util.Arrays;
import java.util.Scanner;

public class Main {
		public static final int Student = 5;
		public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int n;
		n = sc.nextInt();
		
		for(int i=1;i<=n;i++) {
			for(int j=i;j<n;j++) {
				System.out.print(" ");
			}
			for(int j=0;j<(2*i-1);j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		sc.close();
	}

}
